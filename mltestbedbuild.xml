<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project MLTestBed">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/MLTestBed.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.mltestbed.ui.Main"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.jarfile}/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/jars/activation.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/jars/tar.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/jars/mariadb-java-client-2.4.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/jars/mysql-connector-java-8.0.17.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/jars/sqljdbc4.jar"/>
        </jar>
    </target>
</project>
